<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:projecty="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jinn.projecty.widgets.CustomRoundImageView
            android:id="@+id/news_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            projecty:radius_left_top = "5dp"
            projecty:radius_right_top = "5dp"
            projecty:radius_left_bottom= "5dp"
            projecty:radius_right_bottom = "5dp"/>

        <ImageView
            android:id="@+id/more"
            android:src ="@drawable/more"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right|top">
        </ImageView>
    </FrameLayout>



    <TextView
        android:id="@+id/news_title"
        android:layout_marginTop="10dp"
        android:textColor="@color/design_default_color_on_secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>
</LinearLayout>
